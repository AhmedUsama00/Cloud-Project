@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Sign In";
}
<link rel="stylesheet" href="~/css/SignINstyle.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="wrapper">
    <h1>Login</h1>
    <p id="error-message"></p>
    <form id="form" method="post">
      <div>
        <label for="email-input">
          <span>
                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                    <path d="M480-480q-66 0-113-47t-47-113q0-66 47-113t113-47q66 0 113 47t47 113q0 66-47 113t-113 47ZM160-160v-112q0-34 17.5-62.5T224-378q62-31 126-46.5T480-440q66 0 130 15.5T736-378q29 15 46.5 43.5T800-272v112H160Z" />
                </svg>
          </span>
        </label>
        <input asp-for="Input.Email" class="form-control" type="email" aria-required="true" placeholder="example@gmail.com" id="email-input" required />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>

      <div>
        <label for="password-input">
          <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path d="M240-80q-33 0-56.5-23.5T160-160v-400q0-33 23.5-56.5T240-640h40v-80q0-83 58.5-141.5T480-920q83 0 141.5 58.5T680-720v80h40q33 0 56.5 23.5T800-560v400q0 33-23.5 56.5T720-80H240Zm240-200q33 0 56.5-23.5T560-360q0-33-23.5-56.5T480-440q-33 0-56.5 23.5T400-360q0 33 23.5 56.5T480-280ZM360-640h240v-80q0-50-35-85t-85-35q-50 0-85 35t-35 85v80Z"/></svg>
        </label>
        <input asp-for="Input.Password" class="form-control" type="password" aria-required="true" placeholder="**********" id="password-input" required />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
      </div>
      <button type="submit">Login</button>
    </form>
    <p>New here? <a asp-area="Identity" asp-page="/Account/Register">Create an Account</a></p>
  </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
