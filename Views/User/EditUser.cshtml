@model UserExtra

@{
    Layout = "~/Views/Shared/AdminDashboard.cshtml";
    ViewData["Title"] = "Edit User";
}
<link rel="stylesheet" href="~/css/Components.css" asp-append-version="true" />


<form asp-action="EditUser" method="post" enctype="multipart/form-data" class="row g-3 formSection">
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <label asp-for="FullName" class="form-label">Full Name</label>
        <input type="text" class="form-control" asp-for="FullName">
    </div>
    <div class="col-md-6">
        <label asp-for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="col-md-6">
        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
        <input type="tel" class="form-control" asp-for="PhoneNumber">
    </div>
    <div class="col-md-6">
        <label asp-for="Gender" class="form-label">Gender</label>
        <select asp-for="Gender" class="form-select">
            <option>Choose Gender</option>
            <option value="true">Male</option>
            <option value="false">Female</option>
        </select>
    </div>
    <div class="col-md-6">
        <label asp-for="ParentPhoneNumber" class="form-label">Parent Phone Number</label>
        <input type="tel" class="form-control" asp-for="ParentPhoneNumber">
    </div>
    <div class="col-md-6">
        <label asp-for="ParentEmailAddress" class="form-label">Parent Email</label>
        <input type="email" class="form-control" asp-for="ParentEmailAddress">
    </div>
    <div class="col-12">
        <label asp-for="AboutDescription" class="form-label">About Description</label>
        <textarea asp-for="AboutDescription" class="form-control" rows="7"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="clientFile" class="form-label">Upload Profile Image</label>
        <input asp-for="clientFile" class="form-control" type="file" id="formFile" onchange="loadFile(event)">
        <img id="myImg" height="150" />
    </div>

    <div class="mb-3">
        <label asp-for="PasswordHash" class="form-label">Change Password</label>
        <input asp-for="PasswordHash" class="form-control" type="password">
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<script>
    var loadFile = function (event) {
        var reader = new FileReader();
        reader.onload = function () {
            var myImg = document.getElementById('myImg');
            myImg.src = reader.result;
        }
        reader.readAsDataURL(event.target.files[0])
    }
</script>